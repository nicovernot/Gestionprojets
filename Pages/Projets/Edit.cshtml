@model Medecins.Pages.Projets.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Projet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Projet.ProjetID" />
            <div class="form-group">
                <label asp-for="Projet.nom" class="control-label"></label>
                <input asp-for="Projet.nom" class="form-control" />
                <span asp-validation-for="Projet.nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Projet.trigrame" class="control-label"></label>
                <input asp-for="Projet.trigrame" class="form-control" />
                <span asp-validation-for="Projet.trigrame" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Projet.description" class="control-label"></label>
                <input asp-for="Projet.description" class="form-control" />
                <span asp-validation-for="Projet.description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Projet.RespID" class="control-label"></label>
                <select asp-for="Projet.RespID" class="form-control" asp-items="ViewBag.RespID"></select>
                <span asp-validation-for="Projet.RespID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

